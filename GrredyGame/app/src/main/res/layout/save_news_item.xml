<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/save_news_image"
            android:layout_width="100dp"
            android:scaleType="fitXY"

            android:layout_height="100dp"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/protest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="#protest"
        android:textColor="@color/green"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/card_view" />

    <TextView
        android:id="@+id/save_text"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        android:textStyle=""
        android:maxLength="42"
        android:text="Lorem ipsum dolor sit amet consectetur adi"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/protest"/>

    <TextView
        android:id="@+id/save_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29-03-21"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/save_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>