<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardCornerRadius="15dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="43dp"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/save_news_image"
            android:layout_width="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/ic_launcher_background"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>

    <!--        tools:layout_editor_absoluteX="139dp"-->
    <!--        tools:layout_editor_absoluteY="58dp"-->
    <!--        tools:ignore="MissingConstraints" />-->

    <TextView
        android:id="@+id/protest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:text="#protest"
        android:textColor="@color/green"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        app:layout_constraintTop_toTopOf="@+id/card_view" />

    <TextView
        android:id="@+id/save_text"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:textSize="22sp"
        android:textStyle=""
        android:text="Lorem ipsum dolor sit amet consectetur adi"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        app:layout_constraintTop_toBottomOf="@+id/protest"/>

    <TextView
        android:id="@+id/save_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29-03-21"
        app:layout_constraintLeft_toRightOf="@+id/card_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toBottomOf="@+id/save_text"/>


</androidx.constraintlayout.widget.ConstraintLayout>